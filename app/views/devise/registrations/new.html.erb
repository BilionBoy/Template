<section class="login-section">
  <div class="container">
    <div class="row login-container">
      <div class="col-lg-5 col-md-6 login-info">
        <h1 class="display-6 fw-bold">Dhio</h1>
        <h2 class="mb-3">Criar uma nova conta</h2>
        <p class="mb-4">Preencha os campos abaixo para se registrar.</p>
      </div>
      <div class="col-lg-7 col-md-6 login-form">
        <div class="form-wrapper">
          <div class="text-center mb-4">
            <h2 class="fw-bold">Registrar</h2>
            <p class="text">Entre com suas informações</p>
          </div>
          <%= flash[:alert] %>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.input :name, autofocus: true, autocomplete: "name", placeholder: "Nome", input_html: { class: "form-control" } %>
            <%= f.input :email, placeholder: "Email", input_html: { class: "form-control" } %>
            <%= f.input :password, placeholder: "Senha", input_html: { class: "form-control" } %>
            <%= f.input :password_confirmation, placeholder: "Confirmar senha", input_html: { class: "form-control" } %>
            <%= f.button :submit, "Criar conta", class: "btn-submit" %>
          <% end %>
          <div class="links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
