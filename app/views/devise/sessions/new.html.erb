<section class="login-section">
  <div class="container">
    <div class="row login-container">
      <div class="col-lg-5 col-md-6 login-info">
        <h1 class="display-6 fw-bold">Aguiar Assessoria</h1>
        <h2 class="mb-3">Bem-vindo de volta!</h2>
        <p class="mb-4">Acesse sua conta agora mesmo.</p>
      </div>
      <div class="col-lg-7 col-md-6 login-form">
        <div class="form-wrapper">
          <div class="text-center mb-4">
            <h2 class="fw-bold">Login</h2>
            <p class="text-muted">Entre com suas credenciais</p>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="input-group">
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="input-group">
              <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
            </div>
            <%= f.submit "Entrar", class: "btn-submit" %>
          <% end %>
          <div class="links">
            <a href="<%= new_password_path(resource_name) %>" class="text-muted">Esqueci minha senha</a>
            <a href="<%= new_registration_path(resource_name) %>" class="text-muted">Cadastrar-se</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
